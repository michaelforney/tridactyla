require kde4

SUMMARY="KDE development support libraries and apps"
HOMEPAGE="http://kdevelop.org"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS="cvs git mercurial subversion"

DEPENDENCIES="
    build+run:
        dev-libs/boost[>=1.35.0]
        subversion? ( dev-scm/subversion[>=1.3] )
        cvs? ( dev-scm/cvs )
        git? ( dev-scm/git )
        mercurial? ( dev-scm/mercurial )"

CMAKE_SRC_CONFIGURE_OPTION_BUILDS=(cvs git mercurial subversion)
CMAKE_SRC_CONFIGURE_OPTION_WITHS=('subversion SubversionLibrary')
CMAKE_SRC_CONFIGURE_PARAMS=(-DWITH_Boost=FALSE) # KDevPlatform doesn't compile without this