SUMMARY="The Gnome Devtool Libraries"
HOMEPAGE="http://www.gnome.org/"
DOWNLOADS="http://ftp.gnome.org/pub/GNOME/sources/gdl/0.7/gdl-0.7.11.tar.bz2"

LICENCES="LGPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="gnome"

DEPENDENCIES="
	build+run:
		>=dev-libs/glib-2
		>=x11-libs/gtk+-2.4
		>=dev-libs/libxml2-2.4
		>=gnome-platform/libglade-2.0
		gnome? (
			>=gnome-base/libgnomeui-2.6
			>=gnome-base/gnome-vfs-2.6
			>=gnome-base/gconf-2
		)
	run:
		dev-util/pkg-config
		>=dev-util/intltool-0.35"

DEFAULT_SRC_INSTALL_EXTRA_DOCS="AUTHORS ChangeLog MAINTAINERS NEWS README"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=(gnome)

